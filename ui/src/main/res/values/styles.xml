    <style name="BaseRouteLineStyle" parent="RouteLineStyle">
        <item name="mapLineWidth">26.0</item>
        <item name="mapStrokeWidth">3</item>
        <item name="mapStrokeColor">#ffffff</item>
    </style>

    <style name="UnknownRouteLineStyle" parent="BaseRouteLineStyle">
        <item name="mapLineColor">#E67F7E79</item>
    </style>

    <style name="BlockRouteLineStyle" parent="BaseRouteLineStyle">
        <item name="mapLineColor">#FD382A</item>
    </style>

    <style name="JamRouteLineStyle" parent="BaseRouteLineStyle">
        <item name="mapLineColor">#FD382A</item>
    </style>

    <style name="DelayRouteLineStyle" parent="BaseRouteLineStyle">
        <item name="mapLineColor">#F7AB17</item>
    </style>

    <style name="SlowRouteLineStyle" parent="BaseRouteLineStyle">
        <item name="mapLineColor">#F0D300</item>
    </style>

    <style name="NormalRouteLineStyle" parent="BaseRouteLineStyle">
        <item name="mapLineColor">#3BD72C</item>
    </style>

    <style name="labelTextStyle_1" parent="LabelTextStyle">
        <item name="mapTextSize">32</item>
        <item name="mapTextColor">#DB5461</item>
        <item name="mapTextStrokeWidth">1</item>
        <item name="mapTextStrokeColor">#DB5461</item>
    </style>

    <style name="labelTextStyle_2" parent="LabelTextStyle">
        <item name="mapTextSize">30</item>
        <item name="mapTextColor">#624CAB</item>
        <item name="mapTextStrokeWidth">1</item>
        <item name="mapTextStrokeColor">@android:color/darker_gray</item>
    </style>

    <style name="time_distance_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="path_error_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="location_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
